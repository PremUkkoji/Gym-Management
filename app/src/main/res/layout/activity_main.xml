<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/customer"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:background="@drawable/image_button_shape"
                android:backgroundTint="@color/orange"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/customer" />

            <ImageButton
                android:id="@+id/coach"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:background="@drawable/image_button_shape"
                android:backgroundTint="@color/blue"
                app:srcCompat="@drawable/coach" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/time_table"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:background="@drawable/image_button_shape"
                android:backgroundTint="@color/yellow"
                app:srcCompat="@drawable/time_table"/>

            <ImageButton
                android:id="@+id/how_to_do"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:background="@drawable/image_button_shape"
                android:backgroundTint="@color/green"
                app:srcCompat="@drawable/how_to_do" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/gallery"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:background="@drawable/image_button_shape"
                android:backgroundTint="@color/violet"
                app:srcCompat="@drawable/gallery"/>

            <ImageButton
                android:id="@+id/about"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:background="@drawable/image_button_shape"
                android:backgroundTint="@color/gray"
                app:srcCompat="@drawable/about" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>